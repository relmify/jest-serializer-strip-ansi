{
  "name": "@relmify/jest-serializer-strip-ansi",
  "version": "1.0.0",
  "description": "jest snapshot serializer for removing ANSI text formatting escape codes",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "always.js",
    "always.d.ts",
    "!**/*.map",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "jest",
    "snapshot",
    "serializer",
    "ansi",
    "matchers"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -watch",
    "clean": "rimraf dist",
    "clean:jest": "jest --clear-cache --bail 0",
    "lint:check": "eslint ./src --ext .ts",
    "lint:fix": "eslint --fix ./src --ext .ts",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run clean && npm run lint:check && npm run prettier:check && npm test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "jest-snapshot-serializer-raw": "^1.2.0",
    "jest-watch-toggle-config": "^2.0.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "author": "Leila Pearson",
  "license": "MIT"
}
